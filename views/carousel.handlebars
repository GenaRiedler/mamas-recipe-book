<link href="css/carousel.css" rel="stylesheet">
<div class="c-wrapper">
    <div id="theCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            {{#each Recipes}} {{#if @index}}
            <li data-target="#theCarousel" data-slide-to="{{@index}}"></li>
            {{else}}
            <li data-target="#theCarousel" data-slide-to="{{@index}}" class="active"></li>
            {{/if}} {{/each}}
        </ol>
        <div>
            <div class=" carousel-inner" role="listbox ">
                {{#each Recipes}} {{#if @index}}
                <div class="item ">
                    {{else}}
                    <div class="item active ">
                        {{/if}}
                        <img class="first-slide " src="images/{{picture}} " alt="recipe pic {{id}} ">
                        <div>

                            <div class="carousel-caption">
                                <div class="c-background"></div>
                                <h1>{{title}}</h1>
                                <p>{{description}}</p>
                                <p>
                                    <input class="actionButton " type="button " recipeID={{id}} value="View ">
                                    <input class="actionButton " type="button " recipeID={{id}} value="Edit ">
                                    <input class="actionButton " type="button " recipeID={{id}} value="Delete ">
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <a class="left carousel-control" href="#theCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left " aria-hidden="true "></span>
                    <span class="sr-only ">Previous</span>
                </a>
                <a class="right carousel-control" href="#theCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true "></span>
                    <span class="sr-only ">Next</span>
                </a>
            </div>
        </div>
    </div>

</div>
<!-- /.carousel -->