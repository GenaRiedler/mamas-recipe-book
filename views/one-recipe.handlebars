{{#each Recipes}}
<div class="container edit-cont">
<div class="row">
  <div class="col-md-12 text-center">
    <h1>{{title}}</h1>
    <h2>{{description}}</h2>
    <hr>
  </div>

</div>
<div class="row">
  <div class="col-md-4">
    <img src="../images/{{picture}}" alt="picture_of_recipe_{{id}}" width="200px">
  </div>
  <div class="col-md-4">
    <h2>Ingredients</h2>
    <ul>
      {{#each ingredients}}
      <li title="{{qty}}{{unit.unit}} - {{ingredient}}">
        {{qty}}{{unit.abbr}} - {{ingredient}}
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4">
    <h2>Directions</h2>
    <ol>
      {{#each directions}}
      <li>
        {{direction}}
      </li>
      {{/each}}
    </ol>
  </div>
  
  <div class="row text-center">
    <div class="col-md-12">
      <hr>
      <input class="actionButton btn btn-default" type="button" recipeID={{id}} value="Edit">
      <input class="actionButton btn btn-default" type="button" recipeID={{id}} value="Delete">
    </div>
  </div>
</div>
</div>
{{/each}}